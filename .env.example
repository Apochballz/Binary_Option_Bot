# ==============================================
# API KEYS (REQUIRED)
# ==============================================
TWELVE_DATA_KEY=your_twelve_data_api_key_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here
OANDA_API_KEY=your_oanda_api_key_here

# ==============================================
# TRADING CONFIGURATION
# ==============================================
MINIMUM_CONFIDENCE=75
MAX_SIGNALS_PER_HOUR=6
AUTO_SCAN_ENABLED=True
AUTO_SCAN_INTERVAL=30
SIGNAL_EXPIRY_MINUTES=5

# ==============================================
# BACKTESTING SETTINGS
# ==============================================
BACKTEST_DAYS=365
BACKTEST_INITIAL_CAPITAL=10000
BACKTEST_STOP_LOSS_PIPS=20
BACKTEST_TAKE_PROFIT_PIPS=40

# ==============================================
# FLASK CONFIGURATION
# ==============================================
FLASK_ENV=production
SECRET_KEY=change-this-to-a-random-secure-string-min-32-chars
DEBUG=False

# ==============================================
# DATABASE
# ==============================================
DATABASE_URL=sqlite:///forex_signals.db

# ==============================================
# CORS (Frontend Domain)
# ==============================================
ALLOWED_ORIGINS=https://your-frontend-domain.com,http://localhost:3000

# ==============================================
# CURRENCY PAIRS TO TRADE
# ==============================================
TRADING_PAIRS=EURUSD,GBPUSD,USDJPY,USDCHF,AUDUSD,USDCAD

# ==============================================
# OPTIONAL: TELEGRAM BOT
# ==============================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
